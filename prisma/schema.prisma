generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  username   String 
  password   String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  role       Role      @default(CLIENT)
}

enum Role {
  CLIENT
  ADMIN
  ROOT
}

model Boards {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String 
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model BoardColumns {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  boardId    String
  columns    Json
}

model BoardTask {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  columnId   String
  boardId    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  title      String 
  status     String
  deadline   String
  priority   String
  executors  String[]
}
